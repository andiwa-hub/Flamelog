<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flamelog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0A0F1A</item>
        <item name="colorPrimaryVariant">#00FFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">#0A0F1A</item>
        <item name="android:windowBackground">#0A0F1A</item>
    </style>

    <style name="KeypadButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:backgroundTint">#1E2A3E</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>


    <style name="OtpBox">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/otp_box_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>



</resources>