<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1D3D">

    <!-- ðŸŸ¦ Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#11284C"
        android:padding="12dp"
        android:elevation="6dp">

        <!-- ðŸ”™ Back Button -->

        <!-- ðŸ§­ Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EMERGENCY ALERT"
            android:textColor="#FFB300"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- ðŸ—ºï¸ OsmDroid MapView -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar" />

    <!-- ðŸ”¥ Glowing Fire Pulse -->
    <View
        android:id="@+id/firePulse"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="@drawable/red_glow_circle"
        android:alpha="0.4" />

    <!-- ðŸš¨ Alert Message -->
    <TextView
        android:id="@+id/tvAlertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ FIRE DETECTED â€“ HIGH LEVEL!"
        android:textColor="#FF6B00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- ðŸ§¯ Bottom Info Panel -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#11284C"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:elevation="10dp">

        <!-- Fire Location Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ FIRE LOCATION"
            android:textColor="#FFB300"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Location Info -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manila, Philippines"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnMarkResolved"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="MARK AS RESOLVED"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0A1D3D"
            android:backgroundTint="#FFD67C"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
</RelativeLayout>

