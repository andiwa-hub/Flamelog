<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/bg_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/ivIncidentIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:contentDescription="Incident Icon"
            app:tint="@color/highlight" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvIncidentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivIncidentIcon"
            android:layout_marginStart="18dp"
            android:text="Incident Title"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="@color/text_highlight"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvIncidentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIncidentTitle"
            android:layout_toEndOf="@id/ivIncidentIcon"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:text="Incident details or notes here..."
            android:textColor="@color/text_secondary"
            android:textSize="17sp"
            android:lineSpacingExtra="4dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
