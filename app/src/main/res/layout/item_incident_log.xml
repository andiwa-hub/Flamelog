<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#11151C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/ivIncidentIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Incident Icon"
            app:tint="#00FFFF"
            android:padding="4dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvIncidentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivIncidentIcon"
            android:layout_marginStart="12dp"
            android:text="Incident Title"
            android:textColor="#00E5FF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvIncidentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIncidentTitle"
            android:layout_toEndOf="@id/ivIncidentIcon"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Incident details or notes here..."
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
