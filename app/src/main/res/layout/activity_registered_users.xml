<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tvRegisteredUsersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Management"
            android:textColor="@color/text_accent"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Pending Registrations Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Registrations"
            android:textColor="@color/text_secondary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <GridLayout
            android:id="@+id/gridPendingUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_marginBottom="24dp">

            <!-- Example Pending User Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvPendingUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="user@example.com"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btnAcceptUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCEPT"
                    android:backgroundTint="@color/alert_success"
                    android:textColor="@color/text_secondary"/>

                <Button
                    android:id="@+id/btnRejectUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REJECT"
                    android:backgroundTint="@color/alert_danger"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </GridLayout>

        <!-- Registered Users Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered Users"
            android:textColor="@color/text_secondary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <GridLayout
            android:id="@+id/gridRegisteredUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="2">

            <!-- Example Registered User Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvRegisteredUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="approveduser@example.com"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btnRemoveUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REMOVE"
                    android:backgroundTint="@color/alert_medium"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
