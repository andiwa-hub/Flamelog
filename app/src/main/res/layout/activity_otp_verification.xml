<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otp_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F1F"
    tools:context=".OtpVerificationActivity">

    <!-- ðŸ”¥ App Icon -->
    <ImageView
        android:id="@+id/otp_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_fire"
        app:tint="#00E5FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¢ OTP Title -->
    <TextView
        android:id="@+id/otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Code"
        android:textColor="#00E5FF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/otp_icon"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“„ Subtitle -->
    <TextView
        android:id="@+id/otp_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit code sent to your number"
        android:textColor="#AAB3C0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/otp_title"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ§© OTP Input Boxes -->
    <LinearLayout
        android:id="@+id/otp_input_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/otp_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="40dp">

        <EditText
            android:id="@+id/otp_1"
            style="@style/OtpBox" />
        <EditText
            android:id="@+id/otp_2"
            style="@style/OtpBox" />
        <EditText
            android:id="@+id/otp_3"
            style="@style/OtpBox" />
        <EditText
            android:id="@+id/otp_4"
            style="@style/OtpBox" />
        <EditText
            android:id="@+id/otp_5"
            style="@style/OtpBox" />
        <EditText
            android:id="@+id/otp_6"
            style="@style/OtpBox" />
    </LinearLayout>

    <!-- ðŸ”¢ Number Pad -->
    <GridLayout
        android:id="@+id/otp_number_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/otp_input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button android:text="1" style="@style/KeypadButton" />
        <Button android:text="2" style="@style/KeypadButton" />
        <Button android:text="3" style="@style/KeypadButton" />
        <Button android:text="4" style="@style/KeypadButton" />
        <Button android:text="5" style="@style/KeypadButton" />
        <Button android:text="6" style="@style/KeypadButton" />
        <Button android:text="7" style="@style/KeypadButton" />
        <Button android:text="8" style="@style/KeypadButton" />
        <Button android:text="9" style="@style/KeypadButton" />
        <View android:layout_width="80dp" android:layout_height="80dp" />
        <Button android:text="0" style="@style/KeypadButton" />
        <View android:layout_width="80dp" android:layout_height="80dp" />
    </GridLayout>

    <!--  Verify Button -->
    <Button
        android:id="@+id/verify_button"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="VERIFY CODE"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#00E5FF"
        app:layout_constraintTop_toBottomOf="@id/otp_number_pad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
