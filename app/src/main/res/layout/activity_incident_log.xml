<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1D3D"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvIncidentLogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Incident Log"
        android:textColor="#FFB300"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Filter Dropdown -->

    <Spinner
        android:id="@+id/spinnerFilter"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/tvIncidentLogTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FF6B00"
        android:entries="@array/alert_levels"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:spinnerMode="dropdown" />


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIncidentLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinnerFilter"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExportLogs"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="Export Logs"
        app:backgroundTint="#E6B800"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:tint="#000000" />


</RelativeLayout>
