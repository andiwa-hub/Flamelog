<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/imgWarningIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_warning"
            android:contentDescription="@string/warning_icon_desc"
            app:tint="@color/alert_high" />


        <TextView
            android:id="@+id/tvFireDetected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMOKE DETECTED"
            android:textColor="@color/alert_high"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowColor="@color/alert_medium"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:layout_marginBottom="16dp"
            android:gravity="center" />


        <TextView
            android:id="@+id/tvAlertLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALERT LEVEL: MEDIUM"
            android:textColor="@color/alert_medium"
            android:textStyle="bold"
            android:textSize="22sp"
            android:shadowColor="@color/alert_high"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:layout_marginBottom="24dp"
            android:gravity="center" />


        <Button
            android:id="@+id/btnMarkResolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_resolved"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/value_normal"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />


        <Button
            android:id="@+id/btnSendAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND ALERT MESSAGE"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/alert_medium"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
