<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1D3D"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Glowing / flashing warning icon -->
        <ImageView
            android:id="@+id/imgWarningIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_warning"
            android:contentDescription="@string/warning_icon_desc"
            app:tint="#FFD600" />

        <!-- SMOKE DETECTED Title -->
        <TextView
            android:id="@+id/tvFireDetected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMOKE DETECTED"
            android:textColor="#FFD600"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowColor="#A64B00"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="12"
            android:layout_marginBottom="12dp" />

        <!-- Alert Level -->
        <TextView
            android:id="@+id/tvAlertLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALERT LEVEL: MEDIUM"
            android:textColor="#FFA000"
            android:textStyle="bold"
            android:textSize="22sp"
            android:shadowColor="#DB5700"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_marginBottom="20dp" />

        <!-- View Location -->

        <!-- Mark Resolved -->
        <Button
            android:id="@+id/btnMarkResolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_resolved"
            android:textColor="#0A1D3D"
            android:backgroundTint="#FFE082"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Send Alert Message -->

    </LinearLayout>
</ScrollView>
