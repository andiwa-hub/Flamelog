<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/text_accent"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Notifications"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="8dp"
                android:thumbTint="@color/highlight"
                android:trackTint="@color/highlight"
                android:layout_marginEnd="4dp" />
        </LinearLayout>

        <!-- Vibration/Sound -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Vibration/Sound"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchVibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="8dp"
                android:thumbTint="@color/highlight"
                android:trackTint="@color/highlight"
                android:layout_marginEnd="4dp" />
        </LinearLayout>

        <!-- Sensitivity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert Sensitivity"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekBarSensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="@color/highlight"
                android:thumbTint="@color/highlight"
                android:max="100"
                android:progress="50" />
        </LinearLayout>

        <!-- Edit Profile -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Edit Profile"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/btn_bg"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:elevation="6dp" />

        <!-- Set Home -->
        <Button
            android:id="@+id/btnSetHomeLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Home Location"
            android:backgroundTint="@color/alert_medium"
            android:textColor="@color/btn_text"
            android:textStyle="bold"/>

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Log Out"
            android:textColor="@color/btn_text"
            android:backgroundTint="@color/alert_high"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:elevation="6dp" />

    </LinearLayout>
</ScrollView>
