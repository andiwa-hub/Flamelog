<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/dashboardLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SafeFlame"
            android:textColor="@color/text_accent"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:animation="@anim/blink" />

        <!-- Dashboard Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Dashboard"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Sensor Cards -->
        <!-- Temperature Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_fire"
                android:tint="@color/icon_flame"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:text="Temperature"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Room"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27Â°C"
                android:textColor="@color/value_normal"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Smoke Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_smoke"
                android:tint="@color/icon_smoke"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:text="Smoke"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Density"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSmoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="@color/value_normal"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Flame Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_flame"
                android:tint="@color/icon_flame"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:text="Flame"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="None Detected"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFlame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe"
                android:textColor="@color/value_normal"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logs"
                android:textColor="@color/btn_text"
                android:backgroundTint="@color/btn_bg"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="@color/btn_text"
                android:backgroundTint="@color/btn_bg" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
