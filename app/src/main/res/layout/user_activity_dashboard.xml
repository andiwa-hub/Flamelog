<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1D3D"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/dashboardLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SafeFlame"
            android:textColor="#FFB300"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:animation="@anim/blink" />

        <!-- Dashboard Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Dashboard"
            android:textColor="#FFF1D6"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Sensor Cards -->
        <!-- Temperature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:src="@drawable/ic_fire"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="#FFF1D6"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room"
                    android:textColor="#FFF1D6"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27Â°C"
                android:textColor="#FFD67C"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Smoke -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_smoke"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoke"
                    android:textColor="#FFF1D6"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Density"
                    android:textColor="#FFF1D6"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSmoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="#FFD67C"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Flame -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_flame"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flame"
                    android:textColor="#FFF1D6"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None Detected"
                    android:textColor="#FFF1D6"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFlame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe"
                android:textColor="#FFD67C"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Alert Levels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <!-- High, Medium, Low indicators remain unchanged -->
            <!-- ... -->
        </LinearLayout>

        <!-- Navigation Buttons (User only: Logs, Settings) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logs"
                android:textColor="#FFF1D6"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="#FFF1D6"
                android:background="@drawable/button_bg" />
        </LinearLayout>

        <!-- Removed Contacts and Registered Users buttons for user dashboard -->

    </LinearLayout>
</ScrollView>
